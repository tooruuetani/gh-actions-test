{
  /*common*/
  "editor.defaultFormatter": null,
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    88,
    119,
  ],
  "editor.tabSize": 4,
  "files.exclude": {
    "**/.coverage": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.serverless": true,
    "**/.terraform": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/node_modules": true,
  },
  "files.trimTrailingWhitespace": true,
  /*python*/
  "python.languageServer": "Pylance",
  "python.analysis.extraPaths": [
    "service/backend/src",
    "service/backend/tests",
  ],
  "python.venvPath": "service/.venv",
  /*yaml*/
  "yaml.format.printWidth": 119,
  "yaml.schemas": {
    "https://d33vqc0rt9ld30.cloudfront.net/latest/gzip/CloudFormationResourceSpecification.json": [
      "*.cf.yaml",
      "*.cf.yml",
      "cf-*.yaml",
      "cf-*.yml"
    ],
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  "yaml.customTags": [
    "!And sequence",
    "!Equals sequence",
    "!If sequence",
    "!Not sequence",
    "!Or sequence",
    "!Base64",
    "!Cidr sequence",
    "!FindInMap sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Join sequence",
    "!Select sequence",
    "!Split sequence",
    "!Sub",
    "!Ref"
  ],
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json][jsonc]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  "[terraform]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
  },
  "[terraform-vars]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "editor.defaultFormatter": "hashicorp.terraform",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
  },
  "cSpell.words": [
    "envfile",
    "lambroll",
    "tablename",
    "tfcmt",
    "tfstate",
    "tfvars",
    "workdir"
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
  ]
}
